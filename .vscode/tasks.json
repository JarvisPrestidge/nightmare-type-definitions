{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "watch",
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-w",
                "-p",
                "."
            ],
            "isBackground": true,
            "promptOnClose": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "run",
            "command": "node",
            "args": [
                "dist/nightmare-tests.js"
            ]
        }
    ]
}
